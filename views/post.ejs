<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Events</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="/">Mission Hill Community</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="about.ejs">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="post.ejs">Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="contact.ejs">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="rest.ejs">Restaurants</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('assets/img/R.jpg')">

        <div class="header-text">
            <div class="site-heading">
                <h1>Events</h1>
                <h2 class="subheading">Find out what is happening near you!</h2>
            </div>
        </div>
    </header>

    <!-- Table -->
    <div class="table">

        <table class="eventst">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Address</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach((event) => { %>
                    <tr>
                        <td>
                            <%= event.Name %>
                        </td>
                        <td>
                            <%= event.Address %>
                        </td>
                        <td>
                            <%= event.Time %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <hr class="my-2">

    <div class="text-center">
        <h1>Want to add an event to our page?</h1>
        <button type="button" class="btn btn-primary my-4" data-bs-toggle="modal" data-bs-target="#createEvent">Click here!</button>
        <div class="modal" id="createEvent">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title">Create Event</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="/create_event">
                            <div class="mb-3">
                                <label class="form-label">Event Name</label>
                                <input id="event_name" name="event_name" type="text" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Address</label>
                                <input id="event_address" name="event_address" type="text" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Date</label>
                                <input id="event_time" name="event_time" type="text" class="form-control">
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary my-4 text-center" type="submit">Submit</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>

</html>