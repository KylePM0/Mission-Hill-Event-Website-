    <!-- Page Header-->
    <header class="masthead" style="background-image: url('assets/img/wit.jpg')">
        <div class="header-text">

            <div class="page-heading">
                <h1>Contact Us</h1>

            </div>
        </div>


    </header>
    <!-- Main -->
    <main>

        <div class="container-fluid text-center">
            <p>Want to give us suggestions, praise, or criticism? Fill out the form we would love to hear from you!</p>
        </div>

        <div class="container">
            <h2>Send us a Message!</h2>

            <form class="form-inline mx-auto" action="/sendemail" method="post">

                <div class="form-floating mx-auto text-center">
                    <input class="form-control" id="contact_name" type="text" name="contact_name" placeholder="Enter your name..." data-sb-validations="required" />
                    <label class="text-center" for="contact_name">Name</label>
                    <div class="invalid-feedback" data-sb-feedback="name:required">A name is required.</div>
                </div>
                <div class="form-floating">
                    <input class="form-control" id="contact_email" type="email" name="contact_email" placeholder="Enter your email..." data-sb-validations="required,email" />
                    <label for="contact_email">Email address</label>
                    <div class="invalid-feedback" data-sb-feedback="email:required">An email is required.</div>
                    <div class="invalid-feedback" data-sb-feedback="email:email">Email is not valid.</div>
                </div>
                <div class="form-floating">
                    <input class="form-control" id="contact_num" type="tel" name="contact_num" placeholder="Enter your phone number..." data-sb-validations="required" />
                    <label for="contact_num">Phone Number</label>
                    <div class="invalid-feedback" data-sb-feedback="phone:required">A phone number is required.</div>
                </div>
                <div class="form-floating">
                    <input class="form-control" id="contact_subject" type="text" name="contact_subject" placeholder="Enter your phone number..." data-sb-validations="required" />
                    <label for="contact_subject">Subject</label>
                    <div class="invalid-feedback" data-sb-feedback="subject:required">A phone number is required.</div>
                </div>
                <div class="form-floating">
                    <textarea class="form-control" id="contact_message" name="contact_message" placeholder="Enter your message here..." style="height: 10rem" data-sb-validations="required"></textarea>
                    <label for="contact_message">Message</label>
                    <div class="invalid-feedback" data-sb-feedback="message:required">A message is required.</div>
                </div>
                <div class="form-row text-center my-4">
                    <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
                </div>
            </form>
            <div class="d-none" id="submitErrorMessage">
                <div class="text-center text-danger mb-3">Error sending message!</div>
            </div>
            <div class="d-none" id="submitSuccessMessage">
                <div class="text-center mb-3">
                    <div class="fw-bolder">Your message has been sent! We'll get back to you shortly.
                    </div>
                </div>
            </div>

        </div>
        </form>

    </main>


    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
